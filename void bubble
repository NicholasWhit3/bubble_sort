#include <iostream>
#include <stdlib.h>

template <class Item>
void exch(Item&A, Item&B)
{
    Item t = A; A = B; B = t;
}

template<class Item>
void compexch(Item &A, Item &B)
{
    if(B < A) exch(A, B);
}

template <class Item>
void buble(Item a[], int l, int r)   //mass, start point, end point
{
    for(int i = l; i < r; i++)
        for(int j = r; j > i; j--)
            compexch(a[j-1], a[j]);
}


int main()
{
    char arr[8] = {'E','A','S','Y','Q','E','U','S'};
    buble(arr,0,7);
    for(int i = 0; i < sizeof (arr); i++)
    {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
